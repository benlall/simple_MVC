{% extends 'layout.html.twig' %}

{% block content %}

    <div class="container">
        <div class="row">
            <div class="col-12">

                <h2 class="text-center">Inserer un nouveau contact</h2>
                <h6>{{ messageSession }}</h6>
                <form method="post">
                    <input type="radio" name="civility" value="1" id="mr" {% if checked == '1' %} {{ checked }} {% endif %}><label for="mr">Mr</label>
                    <input type="radio" name="civility" value="2" id="mms" {% if checked == '2' %} {{ checked }} {% endif %}><label for="mms">Mme</label><br>
                    <label for="lastname">Nom :</label>
                    <input type="text"id="lastname" name="lastname" value="{% if validLastName is not empty %} {{ validLastName }} {% endif %}"><br>
                    <label for="firstname">Prenom :</label>
                    <input type="text"id="firstname" name="firstname" value="{% if validFirstName is not empty %} {{ validFirstName }} {% endif %}"><br>
                    <input type="submit" value="Valider">
                </form>
            </div>
        </div>
    </div>



{% endblock %}