{% extends 'layout.html.twig' %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h2 class="text-center">Enregistrement</h2>
                <h6>{{ messageSession }}</h6>
                <form method="post">
                    <label for="pseudo">Pseudo :</label>
                    <input type="text"id="pseudo" name="pseudo" value="{{ validPseudo }}"><br>
                    <label for="email">Email : </label>
                    <input type="email" id="email" name="email" value="{{ validEmail }}"><br>
                    <label for="pwd">Mot de passe : </label>
                    <input type="password" id="pwd" name="password"><br>
                    <label for="pwd2">Confirmation du mot de passe : </label>
                    <input type="password" id="pwd2" name="passwordConfirm"> {{ passwordError }}<br>
                    <input type="submit" value="S'inscrire">
                </form>

                <a href="/">Homepage</a>
                <a href="/signin">Connexion</a>
                <a href="/contact">Contact</a>
            </div>
        </div>
    </div>



{% endblock %}
